<Window x:Class="Lab2s2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2s2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="399" Margin="0,10,0,0" VerticalAlignment="Top" Background="Transparent" Width="631" MouseLeftButtonUp="canvas_MouseLeftButtonUp"/>
        <Button x:Name="donwload" Content="Download" HorizontalAlignment="Left" Margin="686,307,0,0" VerticalAlignment="Top" Width="75" Click="donwload_Click" IsDefault="True"/>
        <Button x:Name="generation" Content="Generation" HorizontalAlignment="Left" Margin="686,259,0,0" VerticalAlignment="Top" Width="75" Click="generation_Click"/>
        <TextBox x:Name="numberPoints" HorizontalAlignment="Left" Height="41" Margin="686,188,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="75" TextChanged="numberPoints_TextChanged" Initialized="numberPoints_Initialized" GotFocus="numberPoints_GotFocus"/>
        <Button x:Name="Clean" Content="Clear" HorizontalAlignment="Left" Margin="686,358,0,0" VerticalAlignment="Top" Width="75" Click="Clean_Click"/>

    </Grid>
</Window>
